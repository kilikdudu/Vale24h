<Alloy>
	<Collection src="TicketInfo" id="tickets" instance="true" />
	<View id="vwListaTickets"> 
		<Widget src="nl.fokkezb.pullToRefresh" id="ptr" onRelease="myRefresher">
			<TableView width="Titanium.UI.FILL" height="Titanium.UI.FILL" onClick="verMais" id="listaTickets" dataCollection="$.tickets" dataTransform="formatar">
				<TableViewRow class="RowDetail" className="ListaTicketsRow" >
					<View width="100%" height="Ti.UI.SIZE" top="10" layout="vertical">
						<View id="boxConteudo">
							<View id="boxCabecalho">
								<ImageView id="imgLoja" image="{lblImagemEmpresa}" />
								<View id="boxInfo">
									<Label class="descricaoTitulo" id="lblNomeLoja" text="{lblNomeEmpresa}"  />
									<Label class="descricao" id="lblData" text="{lblAdquirido}"  />
								</View>
							</View>
							<ImageView  image="{lblUrlImagem}" height="200" borderRadius="12" top="10" />
							<Label class="descricao" text="{lblDescricao}" width="100%" top="10"  />
							<Label class="descricao" text="{lblQtdeTickets}" width="100%" />
							<Label class="descricao" text="{lblValidade}" width="100%" />
							<Label class="titulo voucher" text="{lblVoucher}" width="100%" visible="{limitada}" height="{mostraVoucher}" /> 
							<View height="Ti.UI.SIZE" width="Ti.UI.FILL" top="10">
								<Button id="verMapa" class="CustomButton" onClick="verMapa" latitude="{latitude}" longitude="{longitude}" nomeLoja="{lblNomeEmpresa}" />
								<Button id="liberaTicket" class="CustomButton" onClick="liberaTicket" ticketId="{id}" title="{descLiberaTicket}" />
							</View>
							<View height="10" />
						</View>	
					</View>
					<View class="divisoria" left="10" right="10" backgroundImage="/images/linhaBlack.png" bottom="0" />
				</TableViewRow>
			</TableView>
		</Widget> 
	</View>
</Alloy>