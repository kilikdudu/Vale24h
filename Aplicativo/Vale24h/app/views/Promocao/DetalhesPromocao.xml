<Alloy>
	<Model src="Promocao" instance="true" id="prom"/> 
	<Window class="janela" id="winDetalhesPromocao">
		<Widget src="GUI" id="minhaTopBar" name="Topbar" />
		<ScrollView id="scrlMestre" scrollingEnabled="true" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="false" top="50" bottom="0" width="100%" layout="vertical" >
			<ImageView id="boxScrlImages" image="{$.prom.urlImagem}" />
			<Label class="descricao espaco" width="90%" wordWrap="true" ellipsize="false" text="{$.prom.descricao}" />
			<View class="divisoria espaco" backgroundColor="black" width="90%" />	
			<Label class="descricao espaco" width="90%" wordWrap="true" ellipsize="false" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT" id="lblNumTickets" text="{$.prom.qtdeDisponivel}" />
			<Label class="descricao espaco" width="90%" wordWrap="true" ellipsize="false" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT" id="lblValidadeGeral" text="{$.prom.lblValidade}" />
			<Button class="espaco CustomButton" width="90%" onClick="pegaLiberaTicket" idPost="{$.prom.idPromocao}" id="btnPegaLiberaTicket" >Pegue um ticket !</Button>
			<Button class="espaco CustomButton" width="90%" onClick="verMapa" latitude="{$.prom.latitude}" longitude="{$.prom.longitude}" id="btnVerMapa" bottom="15" >Ver loja no mapa</Button>
		</ScrollView>
	</Window>
</Alloy>