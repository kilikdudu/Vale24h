<Alloy>
	<Collection src="Promocao" id="promocoes" instance="true" />
	<View id="vwListaPromocoes"> 
		<Widget src="nl.fokkezb.pullToRefresh" id="ptr" onRelease="myRefresher">
			<TableView width="Titanium.UI.FILL" height="Titanium.UI.FILL" id="listaPromocoes" onClick="verMais" dataCollection="$.promocoes" dataTransform="formatar">
				<TableViewRow class="RowDetail" className="ListaPromocaoRow" >
					<View width="100%" height="Ti.UI.SIZE" top="10" layout="vertical">
						<View id="boxConteudo">
							<View id="boxCabecalho">
								<ImageView id="imgLoja" image="{imagemEmpresa}" />
								<View id="boxInfo">
									<Label class="descricaoTitulo" id="lblNomeLoja" text="{nomeEmpresa}"  />
									<Label class="descricao" id="lblData" text="{inicio}"  />
								</View>
							</View>
							<ImageView  image="{urlImagem}" height="200" borderRadius="12" top="10" />
							<Label class="descricao" text="{descricao}" width="100%" top="10"  />
							<Label class="descricao" text="{qtdeTickets}" width="100%" />
							<Label class="descricao" text="{validade}" width="100%" />
							<View height="Ti.UI.SIZE" width="Ti.UI.FILL" top="10">
								<Button id="verMapa" class="CustomButton" onClick="verMapa" latitude="{latitude}" longitude="{longitude}" nomeLoja="{nomeEmpresa}" />
								<Button id="pegaTicket" class="CustomButton" onClick="pegaTicket" promocaoId="{idPromocao}" title="{descPegaTicket}" />
							</View>
							<View height="10" />
						</View>	
					</View>
					<View class="divisoria" left="10" right="10" backgroundImage="/images/linhaBlack.png" bottom="0" />
				</TableViewRow>
			</TableView>
		</Widget> 
	</View>
</Alloy>